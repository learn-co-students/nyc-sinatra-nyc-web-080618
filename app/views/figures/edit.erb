<h1> Edit <%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h3>Figure Name:<input type="text" name="figure[name]" id="figure_name" placeholder="<%=@figure.name%>"></h3>

  <!-- FIGURE has TITLE, LANDMARK -->
  <h3>Titles</h3>
  <!--show all titles available to choose from w/ checkboxes -->
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%=title.id%>"><%=title.name%></input>
  <%end%>

  <br></br>

  <h3>Landmarks</h3>
  <!--show all landmarks available to choose from w/ checkboxes -->
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>
  <br>
  <p>New landmark:
  <input type="text" name="landmark[name]" id="new_landmark" placeholder="landmark"></p>

  <br></br>

  <input type="submit" value="Edit Figure">
</form>
